<Window x:Class="LogisticsWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticsWPF"
        mc:Ignorable="d"
        Title="Logistics WPF"
        Height="600"
        Width="1000"
        Background="{DynamicResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0"
                   Background="{DynamicResource PrimaryColor}"
                   LastChildFill="False"
                   Height="50">

            <TextBlock Text="Logistics"
                       FontFamily="{DynamicResource AppFont}"
                       FontSize="18"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="15,0"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left">

                <Button Content="Продукция" Click="ProductsButton_Click" Height="28"/>
                <Button Content="Материалы" Click="MaterialsButton_Click" Height="28"/>
                <Button Content="Поставщики" Click="SuppliersButton_Click" Height="28"/>
                <Button Content="Сотрудники" Click="EmployeesButton_Click" Height="28"/>
                <Button Content="Оборудование" Click="EquipmentButton_Click" Height="28"/>
                <Button Content="Закупки" Click="PurchasesButton_Click" Height="28"/>
                <Button Content="Производственные заказы"
                        Click="ProductionOrdersButton_Click"
                        Height="28"/>
            </StackPanel>

            <Button Content="Выйти"
                    Click="LogoutButton_Click"
                    Height="30"
                    Margin="10"
                    DockPanel.Dock="Right"/>
        </DockPanel>

        <Frame Grid.Row="1"
               Name="MainFrame"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
